{
  "compilerOptions": {
    // --- Build settings ---
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "noEmit": true,
    "skipLibCheck": true,

    // --- Compatibility ---
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    // --- Modern TypeScript Behavior ---
    "verbatimModuleSyntax": true, // ✅ Enforce proper `import type` usage
    "erasableSyntaxOnly": false, // Avoids erased-syntax restrictions
    "allowImportingTsExtensions": true,

    // --- Strictness & Safety ---
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    // --- Build cleanliness ---
    "noUnusedLocals": false, // ⚙️ Recommended OFF for production
    "noUnusedParameters": false, // ⚙️ Recommended OFF for production

    // --- Path Aliases (fixes '@/lib/utils' errors) ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
